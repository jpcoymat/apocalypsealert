<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<div id="exception-chart-div" style="min-width: 310px; max-width: 800px; height: 400px; margin: 0 auto"></div>


<script type="text/javascript">
  $(function () {
    $('#exception-chart-div').highcharts({
        chart: {
            type: 'bar'
        },
        title: {
            text: 'Exceptions By Product'
        },
        xAxis: {
            categories: [
              <% @products.each do |prod| %>
                '<%= prod.code %>' 
                 <% unless prod == @products.last %>
                ,
                <% end %>
              <% end %>
            ],
            title: {
                text: null
            }
        },
        yAxis: {
            min: 0,
            title: {
                text: 'Quantity',
                align: 'high'
            },
            labels: {
                overflow: 'justify'
            }
        },
        plotOptions: {
            bar: {
                dataLabels: {
                    enabled: true
                }
            }
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'top',
            x: -40,
            y: 100,
            floating: true,
            borderWidth: 1,
            backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
            shadow: true
        },
        credits: {
            enabled: false
        },
        series: [
           {name: "Inbound Qty",
            data: [
              <% @products.each do |prod| %>
                <%= @location.total_inbound_quantity(product_id: prod.id) %> 
                <% unless prod == @products.last %>
                  ,
                <% end %>
              <% end %>
            ]},
            {name: "Inbound Risk Qty",
            data: [
              <% @products.each do |prod| %>
                <%= @location.total_inbound_quantity_at_risk(product_id: prod.id) %>
                <% unless prod == @products.last %>
                  ,
                <% end %>
              <% end %>
            ]},
            {name: "Outbound Qty",
            data: [
              <% @products.each do |prod| %>
                <%= @location.total_outbound_quantity(product_id: prod.id) %>
                <% unless prod == @products.last %>
                  ,
                <% end %>
              <% end %>
            ]},
            {name: "Outbound Risk Qty",
            data: [
              <% @products.each do |prod| %>
                <%= @location.total_outbound_quantity_at_risk(product_id: prod.id) %>
                <% unless prod == @products.last %>
                  ,
                <% end %>
              <% end %>
            ]} 
         ]})
    
  });

</script>
