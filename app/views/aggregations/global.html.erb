<% content_for :head do %>
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>

<% end %>

<h1>Global View</h1>
  <div class="row" >
	  <form class="form-horizontal">
		  <div class="form-group">
			  <label class="control-label col-xs-2">View Form </label>
			  <div class="col-xs-1">
	        <select id="view_type" class="form-control" >
	    	    <option value="chart">Chart</option>
	    	    <option value="table">Table</option>	
	        </select>
	      </div>
	      <div class="col-xs-3"></div>
 		    <label class="control-label col-xs-2">View Attribute</label> 
        <div class="col-xs-2">
	        <select id="attribute_view" class="form-control">
		        <option value="quantity">Quantity</option>
		        <option value="cost">Cost</option>
	        </select>        	
        </div>
	    </div>
	  </form>
  </div>
  <div class="row">
    <div class="flip-container" >
	    <div class="page1">
        <div id="global_view"></div>
      </div>
      <div class="page2">
			  <div id="table_view">
				  <%= render partial: "global_table" %>
				</div>
	    </div>
	  </div>
	</div>
<script type="text/javascript" charset="utf-8">
	$(function() {
		
	  $('#<%= @chart_div_id %>').highcharts({
	        title: {
	          text: 'Supply Chain Summary'
	        },
	        xAxis: {
	            categories: serverData[group_by].chart_categories,
							title: {text: "Phase"}
	        },
	        series: [{name: serverData[group_by].series[attribute_view].name, 
									type: 'bar', 
									data: serverData[group_by].series[attribute_view].data}],
	        plotOptions: {
		        series: {
			        stacking: 'normal',
	            cursor: 'pointer',
							point: {
								events: {
									click: function() {
										var url ="/aggregations/" + this.category.toLowerCase() + "?";
										lastParametersUsed.forEach(function(parameter) {
											url += parameter.attribute_name + "=" + parameter.attribute_value + "&";
										})
										location.href = url;
									}
								}
							}
		        }
	        }
	  });
	  $('#view_type').change(function() {
      var page1 = $('.page1');
      var page2 = $('.page2');
      var toHide = page1.is(':visible') ? page1 : page2;
      var toShow = page2.is(':visible') ? page1 : page2;
         
      toHide.removeClass('flip in').addClass('flip out').hide();
      toShow.removeClass('flip out').addClass('flip in').show();
    });
	});
</script>
