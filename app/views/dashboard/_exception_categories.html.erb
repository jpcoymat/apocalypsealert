<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<div class="container">
  <%= form_for :category_parameters, url: reset_category_exceptions_path , html: {class: "form-inline", role: "form"} do |form| %>
    <div class="form-group">
      <%= form.text_field :product_name, class: "form-control" , placeholder: "Product Name" %>
      <script>
         $(function() {
          var product_names = [
            <% @products.each do |product| %>
              "<%= product.name %>", 
            <% end %>
            ""];
          $( "#category_parameters_product_name" ).autocomplete({
            source: product_names
          });
        });
      </script>
    </div>
    <div class="form-group">
      <%= form.select :location_id, @locations.collect {|loc| [loc.name, loc.id]},{}, class: "form-control"  %>
    </div> 
    <%= submit_tag "Reset Category Summary", class: "btn btn-default" %>
  <% end %>
</div>
<div id="exception-chart-div" style="min-width: 310px; max-width: 800px; height: 400px; margin: 0 auto"></div>


<script type="text/javascript">
  $(function () {
    $('#exception-chart-div').highcharts({
        chart: {
            type: 'bar'
        },
        title: {
            text: 'Exception By Category'
        },
        xAxis: {
            categories: ['Source', 'Move', 'Store', 'Deliver'],
            title: {
                text: null
            }
        },
        yAxis: {
            min: 0,
            title: {
                text: 'Exception Count',
                align: 'high'
            },
            labels: {
                overflow: 'justify'
            }
        },
        plotOptions: {
            bar: {
                dataLabels: {
                    enabled: true
                }
            }
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'top',
            x: -40,
            y: 100,
            floating: true,
            borderWidth: 1,
            backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
            shadow: true
        },
        credits: {
            enabled: false
        },
        series: [{
            name: 'Exception Counts',
            data: [<%= @source_exceptions.count %>, <%= @move_exceptions.count %>, <%= @store_exceptions.count %>, <%= @deliver_exceptions.count %>]}]
    });
  });

</script>
