<div id="exceptions_graph">
<script src="http://code.highcharts.com/highcharts.js"></script>
<script src="http://code.highcharts.com/modules/exporting.js"></script>
<div id="loc_exception_container" style="min-width: 310px; max-width: 800px; height: 400px; margin: 0 auto"></div>


<script type="text/javascript">
  $(function () {
    $('#loc_exception_container').highcharts({
        chart: {
            type: 'column'
        },
        title: {
            text: 'Exception By Category'
        },
        xAxis: {
            categories: ['Source', 'Move', 'Store', 'Deliver'],
            title: {
                text: null
            }
        },
        yAxis: {
            min: 0,
            title: {
                text: 'Exception Count',
                align: 'high'
            },
            labels: {
                overflow: 'justify'
            }
        },
        plotOptions: {
            series: {
              cursor: 'pointer', 
              point: {
                events:{ 
                  click: function () {
                    var s = '/summary_views?summary_parameters%5Blocation_name5D=' + this.y;
                    location.href = s;
                  }
                }
              } 
            }
        },
        legend: {
            layout: 'vertical',
            align: 'right',
            verticalAlign: 'top',
            x: -40,
            y: 100,
            floating: true,
            borderWidth: 1,
            backgroundColor: ((Highcharts.theme && Highcharts.theme.legendBackgroundColor) || '#FFFFFF'),
            shadow: true
        },
        credits: {
            enabled: false
        },
        series: [
          <% @locations.each do |loc| %>
            <% if loc == @locations.last %>
              {name: '<%= loc.name %>',
              data: [<%= loc.inbound_order_line_exceptions.count %>, <%= loc.inbound_shipment_line_exceptions.count %>, <%= loc.inventory_exceptions.count %>, <%= loc.outbound_order_line_exceptions.count %>]}
            <% else %>
             {name: '<%= loc.name %>',
              data: [<%= loc.inbound_order_line_exceptions.count %>, <%= loc.inbound_shipment_line_exceptions.count %>, <%= loc.inventory_exceptions.count %>, <%= loc.outbound_order_line_exceptions.count %>]},
            <% end %> 
          <% end %>
          ]
    });
  });

</script>
</div>
