<h1>Product Categories</h1>

<% if @product_categories.empty? %>
  <p>No Product Categories have been created</p>
<% else %>
<table class="table table-striped">
  <thead>
    <tr>
      <th>Description</th>
      <th>Name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @product_categories.each do |product_category| %>
      <tr>
        <td><%= product_category.description %></td>
        <td><%= product_category.name %></td>
        <td><%= link_to 'Show', product_category %></td>
        <td><%= link_to 'Edit', edit_product_category_path(product_category) %></td>
        <% if product_category.deleteable? %>
          <td><%= button_to 'Destroy', product_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <% end %>
      </tr>
    <% end %>
  </tbody>
</table>
<% end %>
<br>

<%= link_to 'New Product category', new_product_category_path %>
